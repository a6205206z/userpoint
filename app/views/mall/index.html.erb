<% content_for :application do %>
<style type="text/css">

	.productslist{
		padding: 0;
	}
	.productslist li{
		border: 0;
		display: inline-block;
		width: 50%;
		list-style:none;
		float: left;
		padding: 3px;
	}
	.productslist li a{
		display: block;
		border: 1px solid #ddd;
	}
	.productslist img{
		display: block;
		margin: 10px auto;
		width:90%;
	}
	.productslist span{
		display: block;
		text-align: center;
	}
	.pname{
		color:#666;
		font-size: 120%
	}
	.pprice{
		color:#333;
	}
</style>
	<div style="width:100%;overflow:hidden;">
		<ul class="productslist">
			<% @products.each do |p| %>
				<li>
					<a href="/mall/product/<%=p.id %>" style="color:#333; ">
						<%= image_tag p.product_img_url, 'data-turbolinks-track' => true %>
						<span class="pname"><%=p.name %></span>
						<span class="pprice"><%=p.sales_point %>积分</span>
					</a>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>