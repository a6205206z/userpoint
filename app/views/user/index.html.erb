<% content_for :application do %>
	<h1>User Info</h1>
	<p>Name : <%= @user.real_name %></p>
	<p>Age : <%= @user.age %> yr</p>
	<p>Sex : 
		<% if @user.sex == 1 %>
		男
		<% elsif @user.sex == 0 %>
		女
		<% end%>
	</p>
	<p>My Code : <font style="color:red"><%=@user.my_code %></font></p>
	<p>Point ： <%=@user.user_point %></p>
	<p>Money ： <%=@user.user_money %> 元</p>
	<p>Create Date : <%=@user.create_time %></p>

	<h1>User Point IO</h1>
	<% if @point_ios%>
		<table border=1>
			 <tr>
				  <td>状态</td>
				  <td>积分</td>
				  <td>备注</td>
				  <td>操作时间</td>
				  <td>获取来源</td>
				  <td>来源代码</td>
			  </tr>
			<% @point_ios.each do |io| %>
			  <tr>
				  <td>
				  	<% if io.status == 1 %>
				  	<p style="color:green">成功</p>
				  	<% elsif io_status == 0 %>
				  	<p style="color:red">失败</p>
				  	<% end %>
				  </td>
				  <td><%= io.point %></td>
				  <td><%= io.remarks %></td>
				  <td><%= io.operate_time %></td>
				  <td><%= io.from %></td>
				  <td><%= io.code %></td>
			  </tr>
			<% end %>
		</table>
	<% end %>

	<h1>User Money IO</h1>
	<% if @money_ios%>
		<table border=1>
			 <tr>
				  <td>状态</td>
				  <td>金额</td>
				  <td>备注</td>
				  <td>操作时间</td>
			  </tr>
			<% @money_ios.each do |m| %>
			  <tr>
				  <td>
				  	<% if m.status == 1 %>
				  	<p style="color:green">成功</p>
				  	<% elsif m_status == 0 %>
				  	<p style="color:red">失败</p>
				  	<% end %>
				  </td>
				  <td><%= m.money %> 元</td>
				  <td><%= m.remarks %></td>
				  <td><%= m.operate_time %></td>
			  </tr>
			<% end %>
		</table>
	<% end %>

<% end %>