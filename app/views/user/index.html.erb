<% content_for :application do %>
<style type="text/css">
	li a,li a:hover,li a:active{
		color:#333;
		background-color: transparent;
	}
	.m-widget-list a::after {
  color: #999;
  content: "";
  display: inline-block;
  font-family: FontAwesome,sans-serif;
  font-feature-settings: normal;
  font-kerning: auto;
  font-language-override: normal;
  font-size: inherit;
  font-size-adjust: none;
  font-stretch: normal;
  font-style: normal;
  font-synthesis: weight style;
  font-variant: normal;
  font-weight: normal;
  line-height: 1;
  margin-top: -8px;
  position: absolute;
  right: 10px;
  text-rendering: auto;
  top: 50%;
  transform: translate(0px, 0px);
}
</style>
	<div style="text-align:center;height:250px;line-height:250px;width:100%;background-color:#3bb4f2;">
		<div style="display:inline-block;vertical-align:bottom;margin-bottom:10%;line-height:20px;">
			<%= image_tag @user.profile, 'data-turbolinks-track' => true , :style => "width:80px;height:80px;border-radius:100%"%>
			<span style="display:block;padding-top:10px;color:white;"><%= @user.real_name %></span>
			<span style="display:block;padding-top:10px;color:white;"  data-am-modal="{target: '#my-alert'}">我的代码</span>
			
		</div>
	</div>
	<div style="width:100%">
		<ul class="am-list am-list-static m-widget-list">
			<li style="background-color:rgba(59,180,242,0.857);border:0">
				<a href="/user/pointio " style="color:#333; ">
					<i class="am-icon-trophy am-icon-fw"></i>
					<span style="margin-right:5px;">我的积分:</span><%=@user.user_point %>
				</a>
			</li>
			<li style="background-color:rgba(59,180,242,0.714);border:0">
				<a href="/user/moneyio" style="color:#333">
					<i class="am-icon-money am-icon-fw"></i>
					<span style="margin-right:5px;">我的余额:</span><%=@user.user_money %>
				</a>
			</li>
			<li style="background-color:rgba(59,180,242,0.571);border:0">
				<a href="/user/moneyio" style="color:#333">
					<i class="am-icon-truck am-icon-fw"></i>
					<span style="margin-right:5px;">我的经销商
				</a>
			</li>
			<li style="background-color:rgba(59,180,242,0.428);border:0">
				<a href="/user/moneyio" style="color:#333">
					<i class="am-icon-shopping-cart am-icon-fw"></i>
					<span style="margin-right:5px;">积分商城</span>
				</a>
			</li>
			<li style="background-color:rgba(59,180,242,0.285);border:0">
				<a href="/user/inputcode" style="color:#333">
					<i class="am-icon-barcode am-icon-fw"></i>
					<span style="margin-right:5px;">输入优惠码</span>
				</a>
			</li>
			<li style="background-color:rgba(59,180,242,0.142);border:0">
				<a href="/user/signout" style="color:#333">
					<i class="am-icon-sign-out am-icon-fw"></i>
					<span style="margin-right:5px;">退出登录</span>
				</a>
			</li>
		</ul>
	</div>
	<div class="am-modal am-modal-alert" tabindex="-1" id="my-alert">
	  <div class="am-modal-dialog">
	    <div class="am-modal-hd">我的代码</div>
	    <div class="am-modal-bd">
	      <%=@user_code_my.code %>
	    </div>
	    <div class="am-modal-footer">
	      <span class="am-modal-btn">确定</span>
	    </div>
	  </div>
	</div>
<% end %>