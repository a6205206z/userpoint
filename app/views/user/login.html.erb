<% content_for :application do %>
<style type="text/css">
	body{
		background-color: #eee;
	}
	.divpass{
		margin-top:-1px;
	}
	.btnlogin {
		display: block;
		margin: 20px auto;
		width: 80%;

	}
</style>
<form action="/user/signin" method="post">
  <div class="am-input-group divusername">
		  <span class="am-input-group-label"><i class="am-icon-mobile-phone am-icon-fw"></i></span>
		  <input type="text" id="loginname" name="loginname" class="am-form-field" placeholder="请输入手机号">
		</div>
		<div class="am-input-group divpass">
		  <span class="am-input-group-label"><i class="am-icon-lock am-icon-fw"></i></span>
		  <input type="password" id="password" name="password" class="am-form-field" placeholder="请输入密码">
		</div>
		<button type="submit" class="am-btn am-btn-secondary btnlogin">登录</button>
</form>
		<a href="/user/register" class="am-btn am-btn-secondary btnlogin">注册</a>
<% end %>
