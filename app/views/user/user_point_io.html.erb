<% content_for :application do %>
	<h1>User Point IO</h1>
	<% if @point_ios%>
		<table border=1>
			 <tr>
				  <td>状态</td>
				  <td>积分</td>
				  <td>备注</td>
				  <td>操作时间</td>
				  <td>获取来源</td>
				  <td>来源代码</td>
			  </tr>
			<% @point_ios.each do |io| %>
			  <tr>
				  <td>
				  	<% if io.status == 1 %>
				  	<p style="color:green">成功</p>
				  	<% elsif io_status == 0 %>
				  	<p style="color:red">失败</p>
				  	<% end %>
				  </td>
				  <td><%= io.point %></td>
				  <td><%= io.remarks %></td>
				  <td><%= io.operate_time %></td>
				  <td><%= io.from %></td>
				  <td><%= io.code %></td>
			  </tr>
			<% end %>
		</table>
	<% end %>
<% end %>